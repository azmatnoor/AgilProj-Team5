@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@model RestaurantRegistrationModel
@{
    ViewData["Title"] = "AddRestaurant";
}

<div class="w-75 float-left">
    <h1 class="mx-auto text-center p-5">Register</h1>
    <hr />
    <div class="row text-center mx-auto">
        <div class="container col-md-4">
            <form asp-action="AddRestaurant">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZIPCode" class="control-label"></label>
                    <input asp-for="ZIPCode" class="form-control" />
                    <span asp-validation-for="ZIPCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PricePerKilometer" class="control-label"></label>
                    <input type="range" min="0" max="25" step="1" id="pricePerKmSlider" asp-for="PricePerKilometer" class="form-control" />
                    <span id="pricePerKm"></span>
                    <span asp-validation-for="PricePerKilometer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Restaurant" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>
